DRONE_HOST={{ drone_server_url }}
DRONE_OPEN={{ drone_open }}
{% if drone_database_driver is defined %}
DATABASE_DRIVER={{ drone_database_driver }}
{% endif %}
{% if drone_database_config is defined %}
DATABASE_CONFIG={{ drone_database_config }}
{% endif %}
{% if drone_orgs is defined %}
