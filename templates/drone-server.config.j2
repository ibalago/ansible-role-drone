{% endif %}
{% if drone_debug is defined %}
DRONE_DEBUG={{ drone_debug }}
{% endif %}
{% if drone_server_cert is defined %}
DRONE_SERVER_CERT={{ drone_server_cert }}
{% endif %}
{% if drone_server_key is defined %}
DRONE_SERVER_KEY={{ drone_server_key }}
{% endif %}
{% if drone_yaml is defined %}
DRONE_YAML={{ drone_yaml }}
{% endif %}
